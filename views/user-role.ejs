<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link rel="stylesheet" href="/css/user-role.css">
</head>
<body>
    <div class="container">
        <h2 style="text-align: center; color: #ff3700;">CHOOSE ROLE</h2>
        <form id="role-form" action="/user-role" method="POST">
            <div class="role-cards">
                <label class="role-card" onclick="selectRole(this, 'ngo')">
                    <input type="radio" name="role" value="ngo" style="display: none;">
                    <div class="role-indicator"><img src="/img/ngo-fill.svg" alt="" style="width: 90%; height: 90%;"></div>
                    <div class="role-content">
                        <h3>NGO</h3>
                    </div>
                </label>
                
                <label class="role-card" onclick="selectRole(this, 'restaurant')">
                    <input type="radio" name="role" value="restaurant" style="display: none;">
                    <div class="role-indicator"><img src="/img/restaurant-fill.svg" alt="" style="width: 90%; height: 90%;"></div>
                    <div class="role-content">
                        <h3>RESTAURANT</h3>
                    </div>
                </label>
            </div>

            <div id="additional-form" style="display: none;">
                
                <div>
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" required>
                </div>
                <div>
                    <label for="vendorName">Vendor Name:</label>
                    <input type="text" id="vendorName" name="vendorName" required>
                </div>
                <div>
                    <label for="contact">Contact person number:</label>
                    <input type="number" id="contact" name="contact" required minlength="10" maxlength="10">
                </div>
                <div>
                    <label for="city">Choose City:</label>
                    <select class="city" id="city" name="city" required>
                        <option value="" disabled selected>Select your city</option>
                        <option value="Mumbai">Mumbai</option>
                        <option value="Delhi">Delhi</option>
                        <option value="Bangalore">Bangalore</option>
                        <option value="Hyderabad">Hyderabad</option>
                        <option value="Chennai">Chennai</option>
                        <option value="Kolkata">Kolkata</option>
                        <option value="Pune">Pune</option>
                        <option value="Jaipur">Jaipur</option>
                        <option value="Ahmedabad">Ahmedabad</option>
                        <option value="Lucknow">Lucknow</option>
                    </select>
                </div>
            </div>
            
            <button type="submit" class="btn" style="display: none;" id="continue-btn">Continue</button>

            <script>
                function selectRole(element, role) {
                    // Remove selected class from all cards
                    document.querySelectorAll('.role-card').forEach(card => {
                        card.classList.remove('selected');
                    });
                    
                    // Add selected class to clicked card
                    element.classList.add('selected');
                    
                    // Check the radio input
                    element.querySelector('input[type="radio"]').checked = true;

                    // Show additional form and continue button
                    document.getElementById('additional-form').style.display = 'block';
                    document.getElementById('continue-btn').style.display = 'block';

                    // Change label based on selected role
                    const vendorLabel = document.querySelector('label[for="vendorName"]');
                    if (role === 'ngo') {
                        vendorLabel.textContent = 'NGO Name:';
                    } else {
                        vendorLabel.textContent = 'Vendor Name:';
                    }
                }
            </script>

        </form>
    </div>
</body>
</html>
